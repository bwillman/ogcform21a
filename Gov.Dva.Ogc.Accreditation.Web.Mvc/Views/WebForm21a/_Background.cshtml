						<div class="radio_label">Yes</div>
                        @Html.RadioButtonFor(model => model.WasConvicted, true)

	  					<div class="radio_label">No</div>
                        @Html.RadioButtonFor(model => model.WasConvicted, false) 
	  				
	  			</div>
	  		</div>
